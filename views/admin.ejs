<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Admin Page</title>
</head>
<body>
    <style>

        html,
        body {
        height: 100%;
        }

        body {
        align-items: center;
        padding: 30px;
        background-color: #f5f5f5;
        }
        img{
            width: 240px;
            border-radius: 5px;
        }
        span{
            width: 45%;
            display: inline-block;
            border: 1px solid black;
        }
        .facts{
            width: 80%;
            padding: 5px;
            margin: 3px;
        }
        .cities{
            border :1px solid rgb(210, 205, 255);
            padding: 20px;
            margin: 10px;
            border-radius: 5px;
            box-shadow: 1px 1px 10px rgb(177, 177, 177);
        }
        .bodyTitle{
            width: 45%;
            padding: 5px;
            margin: 3px;
        }
        #bodyTitleSection{
            padding: 20px;
            border-radius: 5px;
            box-shadow: 1px 1px 10px rgb(177, 177, 177);
        }
        #socialMedia{
            padding: 20px;
            border-radius: 5px;
            box-shadow: 1px 1px 10px rgb(177, 177, 177);
        }
        #submitBtn{
            width: 150px;
        }
        input{
            border: 1px solid #AAA;
            border-radius: 4px;
        }
        .tourItems{
            display: inline-block; 
            border: 1px solid #ccc;
            border-radius: 7px; 
            width: 250px; 
            margin: 5px; 
            padding: 5px ;
        }
        
    </style>
    <form action="/admin" method="post">
        <div id="bodyTitleSection">
            <h1 class="h3 mb-3 fw-normal">Body Title</h1>
            <span>Image source 1</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.imgSrc1 %>" type="text" name="imgSrc1" id="" required><br>
            <span>Image source 2</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.imgSrc2 %>" type="text" name="imgSrc2" id="" required><br>
            <span>Image source 3</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.imgSrc3 %>" type="text" name="imgSrc3" id="" required><br>
            <span>Header 1</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.header1 %>" type="text" name="header1" id="" required><br>
            <span>Header 2</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.header2 %>" type="text" name="header2" id="" required><br>
            <span>Header 3</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.header3 %>" type="text" name="header3" id="" required><br>
            <span>Paragraph 1</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.paragraph1 %>" type="text" name="paragraph1" id="" required><br>
            <span>Paragraph 2</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.paragraph2 %>" type="text" name="paragraph2" id="" required><br>
            <span>Paragraph 3</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.paragraph3 %>" type="text" name="paragraph3" id="" required><br>
        </div>
        <br>
        <div id="socialMedia">
            <h1 class="h3 mb-3 fw-normal">Social Media Links</h1>
            <span>Facebook</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.socialMediaLink1 %>" type="text" name="socialMediaLink1" id="" required><br>
            <span>Instagram</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.socialMediaLink2 %>" type="text" name="socialMediaLink2" id="" required><br>
            <span>Telegram</span>
            <input class="bodyTitle" value="<%= data[0].bodyTitle.socialMediaLink3 %>" type="text" name="socialMediaLink3" id="" required><br>
        </div>
        <br><br>
        <h1 class="h3 mb-3 fw-normal px-3">3 Interesting Facts</h1>
        <div class="cities">
            Tashkent <br>
            <li><input class="facts" value="<%= data[0].bodyTitle.tashkentFact1 %>" type="text" name="tashkentFact1" id="" required><br>
            <li><input class="facts" value="<%= data[0].bodyTitle.tashkentFact2 %>" type="text" name="tashkentFact2" id="" required><br>
            <li><input class="facts" value="<%= data[0].bodyTitle.tashkentFact3 %>" type="text" name="tashkentFact3" id="" required><br>
        </div>
        <div class="cities">
            Kashkadarya <br>
            <li><input class="facts" value="<%= data[0].bodyTitle.kashkadaryaFact1 %>" type="text" name="kashkadaryaFact1" id="" required><br>
            <li><input class="facts" value="<%= data[0].bodyTitle.kashkadaryaFact2 %>" type="text" name="kashkadaryaFact2" id="" required><br>
            <li><input class="facts" value="<%= data[0].bodyTitle.kashkadaryaFact3 %>" type="text" name="kashkadaryaFact3" id="" required><br>
        </div>
        <br>
        <div class="text-center"><button id="submitBtn" class="btn btn-primary w-10" type="submit">Update Website</button></div>
    </form><br><hr><br>
    <div>
		<main class="form-signin w-100 m-auto">
			<form action="/addtour" method="POST" enctype="multipart/form-data">
				<h1 class="h3 mb-3 fw-normal">Upload Tour Here</h1>

					<input class="form-control" type="text" id="tourTitle" placeholder="tourTitle"
						value="" name="tourTitle" required>
                        <br>

                    <input class="form-control" type="text" id="tourLocation" placeholder="tourLocation"
						value="" name="tourLocation" required>
                        <br>

                    <input class="form-control" type="number" id="tourDays" placeholder="tourDays"
						value="" name="tourDays" required>
                        <br>

                    <input class="form-control" type="number" id="numOfPeople" placeholder="numOfPeople"
						value="" name="numOfPeople" required>
                        <br>

                    <input class="form-control" type="text" id="tourPrice" placeholder="tourPrice"
						value="" name="tourPrice" required>
                        <br>		
				
					<input class="btn btn-outline-primary my-2" type="file" id="inputFile"
						name="image" value="" required>
                        <br><br>
		
				<div>
					<button class="w-100 btn btn-lg btn-primary" type="submit">Add Tour</button>
				</div>
			</form>
		</main>	  

	</div>

	<br><hr><br>

	<h2 class="h3 mb-3 fw-normal">Uploaded Tours</h2>
	<div class="container p-1">

		<% tours.forEach(function(image) { %>
		
			<div class="innerContainer tourItems" >
				<img src="data:image/<%=image.img.contentType%>;base64,
					<%=image.img.data.toString('base64')%>">
				<div class="imgInfo">
					<h5>Title: <%=image.title%></h5>
                    <h5>Location: <%=image.location%></h5>
                    <h5>Days: <%=image.days%></h5>
                    <h5>Members: <%=image.numOfPeople%></h5>
                    <h5>Price: <%=image.price%></h5>
					<form class="trashEditForm" action="/delete" method="post">
						 
					<button class="btn btn-outline-primary py-0" type="submit" name= "btn" value="<%= image._id %>">Delete Tour<i class="fa fa-trash-o"></i></button>
	
						
					</form>
				</div>
			</div>
		
		<% }) %>
	</div>

</body>
</html>